<div class="booyah-box col-10 offset-1">
  <h1>What I'm Learning</h1>
  <div class="row">
  <% current_user.enrolled_courses.each do |course| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title"><%= link_to course.title, course_path(course) %></h3>
          <p class="card-text"><%= course.description %></p>
          <%= image_tag course.image.to_s, class: 'img-fluid' %> 
          <br />
          <br />          
          <%= link_to "More Info...", course_path(course), class: 'btn btn-sm btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

  <h1>What I'm Teaching</h1>
  <div class="row">
    <% current_user.courses.each do |course| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <%= image_tag course.image.to_s, class: 'img-fluid' %> 
            <h3 class="card-title"><%= link_to course.title, course_path(course) %></h3>
            <p class="card-text"><%= course.description %></p>
            <%= link_to "More Info...", course_path(course), class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
